{
  "id": "vibe-coder",
  "version": "0.1.0",
  "displayName": "Vibe Coder â€” Instant SPA",
  "description": "Deploy an instant SPA by uploading a local file or pasting your HTML code. IBM COS hosts it for you!",
  "type": "deployable_architecture",
  "deliveryMethod": "terraform",
  "variables": [
    {
      "name": "cos_bucket_name",
      "type": "string",
      "ui_hints": {
        "group": "Setup",
        "label": "COS Bucket Name",
        "placeholder": "vibe-coder-sample-bucket"
      }
    },
    {
      "name": "cos_instance_id",
      "type": "string",
      "ui_hints": {
        "group": "Setup",
        "label": "COS Instance ID"
      }
    },
    {
      "name": "cos_bucket_location",
      "type": "string",
      "default": "us-south",
      "ui_hints": {
        "group": "Setup",
        "label": "Bucket Location"
      }
    },
    {
      "name": "local_file",
      "type": "string",
      "ui_hints": {
        "group": "Input",
        "label": "Local SPA File (optional)",
        "placeholder": "/path/to/index.html"
      }
    },
    {
      "name": "pasted_code",
      "type": "string",
      "ui_hints": {
        "group": "Input",
        "label": "Pasted SPA Code (optional)",
        "placeholder": "<!DOCTYPE html>..."
      }
    },
    {
      "name": "api_key",
      "type": "string",
      "ui_hints": {
        "group": "Authentication",
        "label": "IBM Cloud API Key",
        "secret": true
      }
    }
  ],
  "outputs": [
    {
      "name": "spa_url",
      "key_output": true,
      "description": "The public URL of your deployed SPA"
    }
  ]
}
