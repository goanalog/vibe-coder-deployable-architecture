{
  "id": "vibe-coder",
  "version": "0.1.0",
  "displayName": "Vibe Coder â€” Instant SPA",
  "description": "Deploy an instant SPA hosted in IBM Cloud Object Storage. Comes with a default HTML file. Users can paste custom HTML directly in the catalog UI.",
  "type": "deployable_architecture",
  "deliveryMethod": "terraform",
  "tags": ["vibe-coding", "spa", "cos"],
  "variables": [
    {
      "name": "ibmcloud_api_key",
      "type": "string",
      "required": true,
      "description": "Your IBM Cloud API key"
    },
    {
      "name": "region",
      "type": "string",
      "required": false,
      "default": "us-south",
      "description": "Region to deploy resources in"
    },
    {
      "name": "cos_name",
      "type": "string",
      "required": false,
      "default": "vibe-coder-cos",
      "description": "IBM COS instance name"
    },
    {
      "name": "bucket_name",
      "type": "string",
      "required": false,
      "default": "vibe-coder-sample-bucket",
      "description": "COS bucket name"
    },
    {
      "name": "make_public",
      "type": "boolean",
      "required": false,
      "default": true,
      "description": "Whether to make the COS bucket public"
    },
    {
      "name": "sample_app_html",
      "type": "string",
      "required": false,
      "default": "<!DOCTYPE html><html lang=\"en\"><head><meta charset=\"UTF-8\"><title>Vibe Coder Sample App</title><style>body{font-family:sans-serif;text-align:center;margin:50px;}</style></head><body><h1>Welcome to your Vibe Coder SPA!</h1><p>Paste your own HTML in the catalog variable to override this.</p></body></html>",
      "description": "Paste your custom HTML here to override the default sample app",
      "ui_hints": {
        "control": "textarea",
        "rows": 20
      }
    }
  ]
}
