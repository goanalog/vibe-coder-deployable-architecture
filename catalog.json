{
  "id": "vibe-coder",
  "version": "0.1.0",
  "displayName": "Vibe Coder — Instant COS SPA",
  "description": "Deploy a sample HTML app instantly to IBM Cloud Object Storage. Paste or upload HTML, create a bucket, and optionally make it public — Catalog will prompt for all required inputs.",
  "type": "deployable_architecture",
  "deliveryMethod": "terraform",
  "tags": ["vibe coding", "cloud object storage", "sample app", "SPA"],
  "terraform": {
    "main": "main.tf",
    "variables": "inputs.tf"
  },
  "inputs": [
    {
      "name": "ibmcloud_api_key",
      "type": "string",
      "required": true,
      "ui_hints": {
        "label": "IBM Cloud API Key",
        "placeholder": "Enter your API key"
      }
    },
    {
      "name": "region",
      "type": "string",
      "default": "us-south",
      "ui_hints": {
        "label": "Region",
        "placeholder": "Select a region"
      }
    },
    {
      "name": "resource_group_id",
      "type": "string",
      "required": true,
      "ui_hints": {
        "label": "Resource Group ID",
        "placeholder": "Enter your resource group ID"
      }
    },
    {
      "name": "cos_name",
      "type": "string",
      "default": "vibe-coder-cos",
      "ui_hints": {
        "label": "COS Instance Name",
        "placeholder": "Name your COS instance"
      }
    },
    {
      "name": "bucket_name",
      "type": "string",
      "default": "vibe-coder-sample-bucket",
      "ui_hints": {
        "label": "Bucket Name",
        "placeholder": "Name your bucket"
      }
    },
    {
      "name": "make_public",
      "type": "boolean",
      "default": false,
      "ui_hints": {
        "label": "Make Bucket Public"
      }
    },
    {
      "name": "sample_app_html",
      "type": "string",
      "default": "<h1>Hello Vibe Coder!</h1>",
      "ui_hints": {
        "label": "Sample App HTML",
        "placeholder": "Paste your HTML code here",
        "widget": "textarea"
      }
    },
    {
      "name": "existing_cos_id",
      "type": "string",
      "default": "",
      "ui_hints": {
        "label": "Existing COS Instance ID",
        "placeholder": "Leave empty to create a new COS instance"
      }
    }
  ]
}
