{
  "id": "vibe-coder",
  "version": "0.1.0",
  "displayName": "Vibe Coder â€” Instant SPA",
  "description": "Deploy an instant SPA by pasting your HTML code. IBM COS hosts it for you!",
  "type": "deployable_architecture",
  "deliveryMethod": "terraform",
  "variables": [
    {
      "name": "cos_instance_name",
      "type": "string",
      "ui_hints": {
        "group": "Setup",
        "label": "COS Instance Name"
      }
    },
    {
      "name": "cos_bucket_name",
      "type": "string",
      "ui_hints": {
        "group": "Setup",
        "label": "COS Bucket Name"
      }
    },
    {
      "name": "resource_group_id",
      "type": "string",
      "ui_hints": {
        "group": "Setup",
        "label": "Resource Group",
        "control": "resource-group",
        "required": true
      }
    },
    {
      "name": "cos_bucket_location",
      "type": "string",
      "default": "us-south",
      "ui_hints": {
        "group": "Setup",
        "label": "Location"
      }
    },
    {
      "name": "cos_plan",
      "type": "string",
      "default": "standard",
      "ui_hints": {
        "group": "Setup",
        "label": "COS Plan"
      }
    },
    {
      "name": "pasted_code",
      "type": "string",
      "ui_hints": {
        "group": "Input",
        "label": "Pasted SPA Code (Optional)",
        "placeholder": "<!DOCTYPE html>...",
        "control": "textarea"
      }
    },
    {
      "name": "api_key",
      "type": "string",
      "ui_hints": {
        "group": "Authentication",
        "label": "IBM Cloud API Key",
        "secret": true,
        "required": true
      }
    }
  ],
  "outputs": [
    {
      "name": "spa_url",
      "key_output": true,
      "description": "The public URL of your deployed SPA"
    }
  ]
}