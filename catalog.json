{
  "$schema": "https://cloud.ibm.com/schemas/deployable-architecture/v1.json",
  "id": "vibe-coder",
  "version": "0.1.3",
  "displayName": "Vibe Coder â€” Instant SPA",
  "description": "A deployable architecture for 'vibe coding' single-page apps: paste or upload your index.html and get an instant IBM COS-hosted sample app.",
  "type": "deployable_architecture",
  "deliveryMethod": "terraform",
  "source": {
    "path": "."
  },
  "metadata": {
    "category": "Developer Tools",
    "tags": ["vibe", "spa", "cos", "web-hosting", "ibm-cloud"],
    "language": "hcl",
    "terraformVersion": "1.5"
  },
  "inputs": [
    {
      "name": "ibmcloud_api_key",
      "type": "string",
      "description": "Your IBM Cloud API key. Required to authenticate and create resources.",
      "required": true,
      "ui_hints": { "group": "Setup", "control": "password", "label": "IBM Cloud API Key" }
    },
    { "name": "cos_name", "type": "string", "default": "vibe-coder-cos" },
    { "name": "region", "type": "string", "default": "us-south" },
    { "name": "bucket_name", "type": "string", "default": "" },
    { "name": "make_public", "type": "bool", "default": true },
    { "name": "index_file_path", "type": "string", "default": "sample-app/index.html" }
  ]
}
