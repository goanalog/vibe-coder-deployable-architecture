{
  "id": "vibe-coder",
  "version": "0.1.0",
  "displayName": "Vibe Coder — Instant SPA",
  "description": "Deploy an instant Vibe Coder single-page app in IBM Cloud Object Storage. Optionally upload or paste your index.html file.",
  "type": "deployable_architecture",
  "deliveryMethod": "terraform",
  "tags": ["Vibe Coder", "SPA", "IBM Cloud", "COS", "developer"],
  "terraform": {
    "main": "main.tf",
    "variables": "variables.tf",
    "outputs": "outputs.tf",
    "version": "1.12"
  },
  "ui_hints": {
    "groups": [
      {
        "name": "Setup",
        "inputs": [
          {
            "name": "cos_name",
            "label": "COS Instance Name",
            "placeholder": "vibe-coder-cos",
            "required": true
          },
          {
            "name": "cos_bucket_name",
            "label": "COS Bucket Name",
            "placeholder": "vibe-coder-sample-bucket",
            "required": true
          },
          {
            "name": "cos_bucket_location",
            "label": "COS Bucket Location",
            "placeholder": "us-south",
            "required": true
          },
          {
            "name": "resource_group_id",
            "label": "Resource Group ID",
            "placeholder": "Enter your IBM Cloud Resource Group ID",
            "required": true
          },
          {
            "name": "index_html_file",
            "label": "Optional index.html file",
            "placeholder": "Upload your local index.html",
            "required": false,
            "type": "file"
          }
        ]
      }
    ]
  },
  "outputs": [
    {
      "name": "spa_url",
      "label": "Vibe Coder SPA URL",
      "key_output": true,
      "description": "Your deployed SPA URL — click to open or copy."
    }
  ]
}
